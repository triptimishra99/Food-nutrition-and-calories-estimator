{% load static %}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Nothing+You+Could+Do&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/siimple@3.3.1/dist/siimple.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/echarts/4.2.1/echarts.min.js"></script>
    <title>CALCULATING FOOD NUTRITION VALUES</title>
    <style>
        textarea {
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
			margin-left: auto;
            margin-right: auto;
            width: 75%;
        }

        body {
            background: url({% static 'api/bg-photo1.jpg' %}) no-repeat center fixed;
            background-size: cover;
        }

        .siimple-h1 {
            font-family: 'Nothing You Could Do', cursive;
            font-size: 55px;
            text-shadow: 2px 2px #FF7F50;
        }

        .siimple-paragraph {
            font-family: 'Nothing You Could Do';
            text-shadow: 2px 2px #000080;
            font-size: 40px;
        }

        .footer-element {
            text-shadow: 1px 1px 5px #760101;
            font-size: 15px;
            text-decoration: none;
        }
    </style>
</head>

<body>
    {% block body %}
    {% endblock %}
</body>

</html>
